<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:orientation="vertical"
            android:paddingTop="55dp">

            <TextView
                android:id="@+id/tv1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FCECFC"
                android:gravity="center"
                android:minHeight="55dp"
                android:text="居中的dialog" />


            <TextView
                android:id="@+id/tv2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="#FCECFC"
                android:gravity="center"
                android:minHeight="55dp"
                android:text="顶部的dialog" />


            <TextView
                android:id="@+id/tv3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="#FCECFC"
                android:gravity="center"
                android:minHeight="55dp"
                android:text="底部的dialog" />


            <TextView
                android:id="@+id/tv4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="#FCECFC"
                android:gravity="center"
                android:minHeight="55dp"
                android:text="左侧的dialog" />

            <TextView
                android:id="@+id/tv5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="#FCECFC"
                android:gravity="center"
                android:minHeight="55dp"
                android:text="右侧的dialog" />


            <TextView
                android:id="@+id/tv6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:background="#FCECFC"
                android:gravity="center"
                android:minHeight="55dp"
                android:text="底部弹出带动画的的dialog" />

            <TextView
                android:id="@+id/tv7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="#FCECFC"
                android:gravity="center"
                android:minHeight="55dp"
                android:text="顶部弹出带动画的的dialog" />

            <TextView
                android:id="@+id/tv8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="#FCECFC"
                android:gravity="center"
                android:minHeight="55dp"
                android:text="左侧弹出带动画的的dialog" />

            <TextView
                android:id="@+id/tv9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="#FCECFC"
                android:gravity="center"
                android:minHeight="55dp"
                android:text="右侧弹出带动画的的dialog" />


            <TextView
                android:id="@+id/tv10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="55dp"
                android:background="#FCECFC"
                android:gravity="center"
                android:minHeight="55dp"
                android:text="子view带动画的dialog" />

        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.core.widget.NestedScrollView>
</layout>